<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue2">

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="wrap_content"
            android:textColor="@color/colorGray2"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHead"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray2"
            android:layout_below="@+id/tvDes"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_blue_circle"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/btn_lock">

            <ImageButton
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_blue_circle"
                android:layout_height="40dp"
                android:src="@drawable/ic_description_black_24dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_check_circle_black_24dp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_blue_circle"
            android:src="@drawable/ic_lock_black_24dp" />
    </RelativeLayout>
</layout>